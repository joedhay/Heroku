<div class="container-fluid wrapper-left">
  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-12"><h1 class="color-red"><%= t('general.group') %></h1> <div class="breadcrumbs"><%= t('general.group') %> | <%= t('groups.creating_grp') %></div></div>
      <div class="col-lg-12 rectangle-box"><div class="align-top-bottom"><%= t('groups.creating_grp') %></div></div>
      <div class="col-lg-12 square-box">
        <% if @group.errors.any? %>
            <div class="col-md-12">
              <div class="alert alert-danger" id="users_error">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <div id="error_explanation">
                  <h4><%= t('phrases.saving_error_sfx', error: pluralize(@group.errors.count, t('general.error'))) %>:</h4>
                  <p>&nbsp;</p>
                  <ul>
                    <% @group.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
        <% end %>

        <%- if !flash[:notice].nil? %>
            <div class="col-md-12">
              <div class="alert alert-success" id="users_error">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <div id="error_explanation">

                  <p>&nbsp;</p>
                  <ul>
                    <%= flash[:notice] %>
                  </ul>
                </div>
              </div>
            </div>
        <%- end %>

        <%= form_for(@group) do |v| %>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('general.name') %></div>
              <div class="col-lg-7">
                <%= v.text_field(:name,:class=>"form-control", :placeholder=> t('general.name')) %>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('general.description') %></div>
              <div class="col-lg-7">
                <%= v.text_area(:description, :class => 'form-control' )  %>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('general.status') %></div>
              <div class="col-lg-7">
                <%= v.text_field(:status,:class=>"form-control", :placeholder=> t('general.status')) %>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('general.code') %></div>
              <div class="col-lg-7">
                <%= v.text_field(:status,:class=>"form-control", :placeholder=> t('groups.code')) %>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('general.role') %></div>
              <div class="col-lg-7">
                <select name="role" class="form-control">
                </select>
              </div>
            </div>

            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"></div>
              <div class="col-lg-7">
                <input type="submit" value="submit" class="btn btn-green-group">&nbsp;<a href="<%= view_group_groups_path %>" role="button" class="btn btn-black"><%= t('general.back') %></a><!--<input type="submit" value="back" class="btn btn-black">-->
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
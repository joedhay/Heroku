<div class="container-fluid wrapper-left">
  <%= form_for(@user,:url=> save_new_user_users_path) do |v| %>
      <div class="row">
        <div class="col-lg-12">
          <div class="col-lg-12"><h1 class="color-red"><%= t('general.user_account') %></h1> <div class="breadcrumbs"><%= t('general.user_account') %> | <%= t('users.creating_user') %></div></div>
          <div class="col-lg-12 rectangle-box"><div class="align-top-bottom"><%= t('users.creating_user') %></div></div>
          <div class="col-lg-12 square-box">
            <% if @user.errors.any? %>
                <div class="col-md-12">
                  <div class="alert alert-danger" id="users_error">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <div id="error_explanation">
                      <h4><%= t('phrases.saving_error_sfx', error: pluralize(@user.errors.count, t('general.error'))) %>:</h4>
                      <p>&nbsp;</p>
                      <ul>
                        <% @user.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
            <% end %>

            <%- if !flash[:notice].nil? %>
                <div class="col-md-12">
                  <div class="alert alert-success" id="users_error">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <div id="error_explanation">

                      <p>&nbsp;</p>
                      <ul>
                        <%= flash[:notice] %>
                      </ul>
                    </div>
                  </div>
                </div>
            <%- end %>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('users.email_add') %></div>
              <div class="col-lg-7">
                <%= v.text_field(:email,:class=>"form-control", :placeholder=> t('users.email_add'))  %>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('general.comp_name') %></div>
              <div class="col-lg-7">
                <input type="text" class="form-control"  placeholder="<%= t('general.comp_name') %>">
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('users.username') %></div>
              <div class="col-lg-7">
                <%= v.text_field(:username,:class=>"form-control", :placeholder=> t('users.username'))  %>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('general.password') %></div>
              <div class="col-lg-7">
                <%= v.text_field(:password,:class=>"form-control", :placeholder=> t('general.password'))  %>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('general.confirmed_pass') %></div>
              <div class="col-lg-7">
                <%= v.text_field(:confirmed_password,:class=>"form-control", :placeholder=> t('general.re-password'))  %>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('users.alias') %></div>
              <div class="col-lg-7">
                <%= v.text_field(:alias,:class=>"form-control", :placeholder=> t('users.alias'))  %>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('users.f_name') %></div>
              <div class="col-lg-7">
                <%= v.text_field(:first_name,:class=>"form-control", :placeholder=> t('users.f_name'))  %>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('users.l_name') %></div>
              <div class="col-lg-7">
                <%= v.text_field(:last_name,:class=>"form-control", :placeholder=> t('users.l_name'))  %>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('users.mobile_num') %></div>
              <div class="col-lg-7">
                <%= v.text_field(:mobile_num,:class=>"form-control", :placeholder=> t('users.mobile_num'))  %>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('general.position') %></div>
              <div class="col-lg-7">
                <%= v.text_field(:position,:class=>"form-control", :placeholder=> t('general.position'))  %>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('general.role') %></div>
              <div class="col-lg-7">
                <select name="role" class="form-control" >
                </select>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"><%= t('general.gender') %></div>
              <div class="col-lg-7">
                <select name="gender" class="form-control" >
                </select>
              </div>
            </div>
            <div class="col-lg-12 align-bottom">
              <div class="col-lg-3 align-right"></div>
              <div class="col-lg-7">
                <input type="submit" value="submit" class="btn btn-green-group">&nbsp;<a href="<%= view_user_users_path %>" role="button" class="btn btn-black"><%= t('general.back') %></a>
              </div>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>